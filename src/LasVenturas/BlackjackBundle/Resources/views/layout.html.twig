<!DOCTYPE html>
<html>
    <head>
    {% block head %}
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/lasventuras/css/style.css') }}" />
        <link href='http://fonts.googleapis.com/css?family=Roboto:400,900' rel='stylesheet' type='text/css'>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}
    </head>
    <body>
        <div id="content">
            <div id="header">
                {% block header %}
                    <h1>BJ is for Blackjack</h1>
                    <nav>
                        <ul>
                            <li><a href="{{ path('las_venturas_blackjack_homepage') }}">Home</a></li>
                            <li><a href="{{ path('las_venturas_blackjack_game') }}">Play</a></li>
                            <li><a href="{{ path('las_venturas_blackjack_stats') }}">Stats</a></li>
                        </ul>
                    </nav>
                
                {% endblock %}
            </div>
            
            <div id="container">
                {% block body %}
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-message">
                            <em>Notice</em>: {{ flashMessage }}
                        </div>
                    {% endfor %}
                
                    <div class="block">
                        {% block content %}{% endblock %}
                        <div class="clear"></div>
                    </div>
                
                    {% if code is defined %}
                        <h2>Code behind this page</h2>
                        <div class="block">
                            <div class="symfony-content">{{ code|raw }}</div>
                        </div>
                    {% endif %}
                {% endblock %}
            </div>
            <div id="footer">
                {% block footer %}
                    
                {% endblock %}
            </div>
        </div>
        {% block javascripts %}
        
        {% endblock %}
    </body>
</html>


